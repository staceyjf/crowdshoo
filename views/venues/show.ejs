    <!-- <form action="/venues/<%= venue._id %>?_method=DELETE" method="POST">
        <button type="submit">Edit venue</button>
    </form> -->

    <br>
    <form action="/ratings/<%= venue._id %>?_method=DELETE" method="POST">
        <button type="submit" class="btn btn-primary">DELETE venue</button>
    </form>

    <br>
    <a href="/venues/myFavs" class="btn btn-primary">Back to myFav map</a>
    <br><br>
    <a href="/venues/new" class="btn btn-primary">Add another myFav</a>
</div>  

<%- include('../partials/footer') %>